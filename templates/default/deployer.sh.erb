#!/bin/sh

rm <%=@application_name%>-$1.zip
wget http://<%=@user%>:<%=@password%>@<%=@server%>:<%=@port%>/httpAuth/repository/download/<%=@project_code%>/.lastSuccessful/<%=@application_name%>-$1.tar.gz

forever stop /opt/node/apps/<%=@application_name%>/<%=@application_main%>
rm -r <%=@application_name%>

tar -zxvf <%=@application_name%>-$1.tar.gz
mv <%=@application_name%>-$1 <%=@application_name%>

forever start /opt/node/apps/<%=@application_name%>/<%=@application_main%>
